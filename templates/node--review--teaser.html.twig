
<article{{ attributes.addClass("teaser") }}>

    {{ title_prefix }}
    {% if not page %}
      <h2{{ title_attributes }}>
        <a href="{{ url }}" rel="bookmark">{{ label }}</a>
      </h2>
    {% endif %}
    {{ title_suffix }}

    {% if display_submitted %}
      <footer>
          {{ author_picture }}
        <div{{ author_attributes }}>
            {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
            {{ metadata }}
        </div>
      </footer>
    {% endif %}

  <div{{ content_attributes }}>
    <div class="left">{{ content.field_teaser_media }}</div>
    <div class="right">{{ content.field_teaser_text }}</div>
  </div>

</article>
